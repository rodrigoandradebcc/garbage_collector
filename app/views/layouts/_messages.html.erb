<div class="container">
	<div class="row">
		<% flash.each do |name, msg| %>
		  <% if msg.is_a?(String) %>
	  		<div class="alert alert-<%= name == :notice ? "success" : "danger" %>"
	  			style="margin-top: 30px;">
		  		<a class="close" data-dismiss="alert">&#215;</a>
		  		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	  		</div>
		  <% end %>
		<% end %>
	</div>
</div>