          <%= f.input :password, autocomplete: "off", label: false, placeholder: "Password" %>
          <%= f.submit "Entrar", class: 'btn btn-success col-md-12' %>
          <% end %>
        </div>
      </div><!-- end row -->
    </li>
    <li>
      <div class="row" style="padding-top: 10px;">
