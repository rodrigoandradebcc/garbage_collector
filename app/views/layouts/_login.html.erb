    <li>
      <div class="row">
        <div class="col-md-12">
          <p class="text-small text-muted">Ou fa√ßa login com:</p>
          <div class="btn-group btn-group-lg btn-group-justified">
            <%= link_to root_path, class: "btn btn-primary" do %>
            <%= icon('facebook-square') %>
            <% end %>  
            <%= link_to root_path, class: "btn btn-info" do %>
            <%= icon('twitter-square') %>
            <% end %>
            <%= link_to root_path, class: "btn btn-danger" do %>
            <%= icon('google-plus-square') %>
