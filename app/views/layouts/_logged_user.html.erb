<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= icon('user', current_user.get_name) %></a>
  <ul class="dropdown-menu">
    <li>
      <%= link_to icon('edit', 'Meu Perfil'), edit_user_registration_path(current_user) %>
    </li>
    <li>
      <%= link_to icon('gamepad', 'Meus Pontos'), root_path %>
    </li>
    <% if current_user.role?("Collector") %>
      <li>
        <%= link_to icon('recycle', 'Meus Pontos de Coleta'), collection_points_path %>
      </li>
      <li>
          <%= link_to icon('recycle', 'Novo Ponto de Coleta'), new_collection_point_path %>
      </li>
    <% elsif current_user.role?("Donator") %>
      <li>
          <%= link_to icon('recycle', 'Nova Doação'), new_donation_path %>
      </li>
    <% end %> 
    <li>
      <%= link_to icon('times', 'Logout'), destroy_user_session_path,
        method: :delete %>
    </li>
  </ul>
</li>
