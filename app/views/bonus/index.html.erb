<div class="container">
  <div class="page-header">
    <h1>Lista de Pontos</h1>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Pontos</h3>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr class="text-primary">
            <th>Lixo</th>
            <th>Pontos</th>
          </tr>
        </thead>

        <tbody>
          <% @bonus.each do |bonu| %>
            <tr class="text-info">
              <td><%= bonu.name %> pts</td>
              <td><%= bonu.points %> pts</td>
            </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
  </div>
</div>